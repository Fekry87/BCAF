# ===========================================
# CONSULTANCY PLATFORM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in the values

# General
NODE_ENV=production

# Database (PostgreSQL)
DB_USER=consultancy
DB_PASSWORD=your-secure-database-password
DB_NAME=consultancy_db
DB_PORT=5432

# API Configuration
API_PORT=8000
JWT_SECRET=generate-a-64-char-random-string-using-openssl-rand-base64-64
JWT_REFRESH_SECRET=generate-another-64-char-random-string-for-refresh-tokens

# CORS (Frontend URL)
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000/api

# Email (SendGrid)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Consultancy Platform

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxx

# Admin Account (for seeding)
ADMIN_EMAIL=admin@consultancy.com
ADMIN_PASSWORD=YourSecurePassword123!

# Redis (Optional)
REDIS_PORT=6379
